<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="wrap_content"
android:layout_height="wrap_content">

<ScrollView

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:visibility="visible">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:src="@drawable/i1" />

        <HorizontalScrollView
            android:id="@+id/hzphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/image2"
            android:visibility="gone">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iphone1"
                    android:layout_width="300dp"
                    android:layout_height="400dp"
                    android:src="@drawable/i2" />

                <ImageView
                    android:id="@+id/iphone2"
                    android:layout_width="300dp"
                    android:layout_height="400dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iphone1"
                    android:src="@drawable/i3" />

                <ImageView
                    android:id="@+id/iphone3"
                    android:layout_width="300dp"
                    android:layout_height="400dp"
                    android:layout_toRightOf="@+id/iphone2"
                    android:src="@drawable/i4" />
            </RelativeLayout>
        </HorizontalScrollView>

        <ImageView
            android:id="@+id/image2"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_below="@id/image1"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:src="@drawable/s1" />

        <HorizontalScrollView
            android:id="@+id/hzsum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image1"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/sumsung2"
                    android:layout_width="300dp"
                    android:layout_height="400dp"
                    android:layout_gravity="center"
                    android:src="@drawable/s2" />

                <ImageView
                    android:id="@+id/sumsung3"
                    android:layout_width="300dp"
                    android:layout_height="400dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/sumsung2"
                    android:layout_gravity="center"
                    android:src="@drawable/s3" />
            </RelativeLayout>
        </HorizontalScrollView>
    </RelativeLayout>

</ScrollView>


</RelativeLayout>
